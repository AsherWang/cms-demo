<!--datatables-->
<div class="row">
    <div class="col-lg-12">
        <%if notice %>
        <p id="notice" class="alert alert-info" style="margin: 10px 0 0 0;"><%= notice %></p>
        <%end%>
        <div class="panel panel-default">
            <div class="panel-heading">
                <!--这张表(plural_table_name)的复数名称的标题化(内部单词首字母大写)-->
                Products详情
            </div>
            <div class="panel-body">
                                    <p>
                        <strong>Title:</strong>
                        <%= @product.title %>
                    </p>

                                    <p>
                        <strong>Content:</strong>
                        <%= @product.content %>
                    </p>

                            </div>
        </div>
    </div>
</div>
<%= link_to '编辑', edit_product_path(@product),class:"btn btn-sm btn-default" %> |
<%= link_to '返回列表', products_path,class:"btn btn-sm btn-default" %>
