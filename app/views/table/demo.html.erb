<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Data Tables</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    数据CRUD
                </div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
<script>
    $(document).ready(function () {
        var language = {
            "decimal":        "",
            "emptyTable":     "暂时没有数据",
            "info":           "当前显示第_START_到_END_项,共_TOTAL_项",
            "infoEmpty":      "暂时没有数据",
            "infoFiltered":   "(filtered from _MAX_ total entries)",
            "infoPostFix":    "",
            "thousands":      ",",
            "lengthMenu":     "每页显示 _MENU_ 项",
            "loadingRecords": "载入数据...",
            "processing":     "Processing...",
            "search":         "搜索:",
            "zeroRecords":    "没有符合要求的数据",
            "paginate": {
                "first":      "第一个",
                "last":       "最后一个",
                "next":       "下一个",
                "previous":   "前一个"
            },
            "aria": {
                "sortAscending":  ": activate to sort column ascending",
                "sortDescending": ": activate to sort column descending"
            }
        };

        $.get("/stories/scheme",function(data){
            data= $.extend({
                'language':language
            },data);
            $('#dataTables-example').DataTable(data)
        });

    });
</script>