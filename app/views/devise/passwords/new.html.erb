<%content_for :head do%>
    <title>忘记密码</title>
<%end%>
<a class="hiddenanchor" id="signup"></a>
<a class="hiddenanchor" id="signin"></a>
<div class="login_wrapper">
    <div class="animate form login_form">
        <section class="login_content" >
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { role:"form",method: :post }) do |f| %>
                <%= devise_error_messages! %>
                <h1>忘记密码</h1>
                <div>
                    <%= f.email_field :email, autofocus: true,class:"form-control",placeHolder:"Email" %>
                </div>
                <%= f.submit "发送密码重置链接",class:"btn btn-default btn-sm",style:"margin-left:0;",disabled:"" %>
                <%=link_to "登陆",new_admin_session_path,class:"reset_pass",style:"float: right;" %>
                <br><br>
                <div class="separator">
                    <!--<p class="change_link">New to site?-->
