<%==panel_helper "忘记密码?" do%>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { role:"form",method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true,class:"form-input" %>
        </div>
        <br>
        <div class="actions">
            <%= f.submit "Send me reset password instructions" %>
        </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
<%end%>