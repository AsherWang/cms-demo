                    <div>
                        <h1><i class="fa fa-paper-plane"></i> CMS</h1>
                        <p>Copyright © 2016 Next Entertainment (Hong Kong) Limited</p>
                    </div>
                </div>
            <% end %>
        </section>
    </div>
</div>