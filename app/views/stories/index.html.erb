<% content_for :head do%>
    <title>Story列表</title>
<% end%>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-ms-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    Story列表
                </h2>
                <%= link_to '新建 Story', new_story_path,style:"float:right;color:white;",class:'btn btn-sm btn-success' %>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <button id="storyMutipleDeleteBtn" class="btn btn-danger btn-group-sm" style="margin-bottom: 10px;">删除已标记项目</button>
                <table width="100%" class="table table-striped table-bordered table-hover" id="storyDataTables"></table>
                <DataTablesConfig
                id="storyDataTablesConfig"
                description="这里是dataTables配置"
                data-base-url="<%=stories_path%>"
                data-model="story"
                data-column-config='<%=@columnConfig%>'></DataTablesConfig>
            </div>
        </div>
    </div>
</div>
