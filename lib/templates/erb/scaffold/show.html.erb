<!--datatables-->
<div class="row">
    <div class="col-lg-12">
        <%%if notice %>
        <p id="notice" class="alert alert-info" style="margin: 10px 0 0 0;"><%%= notice %></p>
        <%%end%>
        <div class="panel panel-default">
            <div class="panel-heading">
                <!--这张表(plural_table_name)的复数名称的标题化(内部单词首字母大写)-->
                <%= plural_table_name.titleize %>详情
            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <tbody>
                    <% attributes.reject(&:password_digest?).each do |attribute| -%>
                        <tr>
                            <td style="width:10px;"><%= attribute.human_name %></td>
                            <td><%%= @<%= singular_table_name %>.<%= attribute.name %> %></td>
                        </tr>
                    <% end -%>
                    </tbody>
                </table>

                <%%= link_to '编辑', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>),class:"btn btn-sm btn-default" %> |
                <%%= link_to '返回列表', <%= index_helper %>_path,class:"btn btn-sm btn-default" %>
            </div>
        </div>
    </div>
</div>
