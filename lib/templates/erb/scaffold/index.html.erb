<%% content_for :head do%>
    <title><%= singular_table_name.titleize %>列表</title>
<%% end%>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-ms-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    <%= singular_table_name.titleize %>列表
                </h2>
                <%%= link_to '新建 <%= human_name %>', new_<%= singular_table_name %>_path,style:"float:right;color:white;",class:'btn btn-sm btn-success' %>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <button id="<%= singular_table_name %>MutipleDeleteBtn" class="btn btn-danger btn-group-sm" style="margin-bottom: 10px;">删除已标记项目</button>
                <table width="100%" class="table table-striped table-bordered table-hover" id="<%= singular_table_name %>DataTables"></table>
                <DataTablesConfig
                id="<%= singular_table_name %>DataTablesConfig"
                description="这里是dataTables配置"
                data-base-url="<%%=<%= plural_table_name %>_path%>"
                data-model="<%= singular_table_name %>"
                data-column-config='<%%=@columnConfig%>'></DataTablesConfig>
            </div>
        </div>
    </div>
</div>
